{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/webhook/shopify-order",
      "dest": "/api/webhook.php"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_NAME": "@db_name", 
    "DB_USER": "@db_user",
    "DB_PASS": "@db_pass",
    "SHOPIFY_WEBHOOK_SECRET": "@shopify_webhook_secret",
    "ADMIN_PASSWORD": "@admin_password"
  }
}
